<div class="container">
  <h2>商品詳細</h2>
  <div class="row">
    <div class="col-4 mt-5">
      <%= image_tag @item.image, size: "200x200"%>
    </div>
    <table class="col-4 mt-5">
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td>税込み価格<br>(税抜価格)</td>
        <td><%= @item.with_tax_price %>(<%= @item.price %>)円</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
      <% if @item.is_active == true %>
        <td class="text-success">販売中</td>
      <% else %>
        <td class="text-secondary">販売停止中</td>
      <% end %>
      </tr>
    </table>
  </div>
  <div class="d-flex justify-content-center mt-5" >
    <%= link_to '編集する', edit_admin_item_path(@item.id), class:"btn btn-success" %>
  </div>
</div>