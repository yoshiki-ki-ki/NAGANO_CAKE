<div class="container">
  <h2>商品編集</h2>
  <div class="row d-flex justify-content-center" >
    <%= form_with model: @item, url: admin_item_path, method: :patch do |f| %>
      <table>
        <tr>
          <td><%= f.label :商品画像 %></td>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td><%= f.label :商品名 %></td>
          <td><%= f.text_field :name %></td>
        </tr>
        <tr>
          <td><%= f.label :商品説明 %></td>
          <td><%= f.text_area :introduction %></td>
        </tr>
        <tr>
          <td><%= f.label :ジャンル %></td>
          <td><%= f.collection_select(:genre_id, Genre.all, :id, :name) %></td>
        </tr>
        <tr>
          <td><%= f.label :税抜価格 %></td>
          <td><%= f.text_field :price %>円</td>
        </tr>
        <tr>
          <td><%= f.label :販売ステータス %></td>
          <td>
            <%= f.radio_button :is_active, true %>販売中
            <%= f.radio_button :is_active, false %>販売停止中
          </td>
        </tr>
        <tr>
          <td><%= f.submit '変更を保存', class:"btn btn-success" %></td>
        </tr>
        <% end %>
    </table>
  </div>
</div>