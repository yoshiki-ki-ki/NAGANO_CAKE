<div class="container">
  <h3>ジャンル一覧・追加</h3>
  <div class="row">
    <table class="table mt-5">
      <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
        <%= f.label :ジャンル名, class: "mr-5" %>
        <%= f.text_field :name, class: "mr-5" %>
        <%= f.submit '新規登録', class: "btn btn-success" %>
      <% end %>
    </table>
    <table class="table col-lg-6">
      <thead>
        <tr style="background-color: #EEEEEE;" >
          <th>ジャンル</th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
          <td>
            <%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %>
          </td>
        </tr>
        <% end %>
        <%= paginate @genres %>
      </tbody>
    </table>
  </div>
</div>