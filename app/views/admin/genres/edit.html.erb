<div class="container">
  <h2>ジャンル編集</h2>
  <div class="row mt-5">
    <%= form_with model: @genre, url: admin_genre_path, method: :patch do |f| %>
      <%= f.label :ジャンル名, class: "mr-5" %>
      <%= f.text_field :name, class: "mr-5" %>
      <%= f.submit '変更を保存', class: "btn btn-success" %>
    <% end %>
  </div>
</div>