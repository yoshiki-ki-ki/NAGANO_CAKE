<div class="container">
  <h3>注文履歴一覧</h3>
  <div class="row mt-5">
    <table class="table">
      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th>注文ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |orders| %>
          <tr>
            <td><%= @orders.created_at %></td>
            <td><%= @order.customer.last_name %><%= @order.customer.first_name %></td>
            <td><%= @orders.order_details.amount %></td>
            <td><% @orders.order_status %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
