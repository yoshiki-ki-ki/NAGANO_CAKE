<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>

<%= form_with model: @customer, url: admin_customer_path, method: :patch do |f| %>
  <%= f.label :会員ID %>
  <%= @customer.id %>
  
  <%= f.label :氏名 %>
  <%= f.text_field :name %><%= f.text_field :name %>
  
  <%= f.label :フリガナ %>
  <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
  
  <%= f.label :郵便番号 %>
  <%= f.text_field :postal_code %>
  
  <%= f.label :住所 %>
  <%= f.text_field :address %>
  
  <%= f.label :電話番号 %>
  <%= f.text_field :telephone_number %>
  
  <%= f.label :メールアドレス %>
  <%= f.text_field :email %>
  
  <%= f.label :会員ステータス %>
  <%= f.radio_button :is_active, true %>有効
  <%= f.radio_button :is_active, false %>退会
  <%= f.submit '変更を保存' %>
  
<% end %>