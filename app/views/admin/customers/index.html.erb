<div class="container">
  <h2>会員一覧</h2>
  <div class="row mt-5">
    <table class="table">
      <thead>
        <tr>
          <th>会員ID</th>
          <th>氏名</th>
          <th>メールアドレス</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td><%= customer.id %></td>
            <td>
              <%= link_to admin_customer_path(customer.id) do %>
                <%= customer.last_name %><%= customer.first_name %>
              <% end %>
            </td>
            <td><%= customer.email %></td>
            <td>
              <% if customer.is_active == false %>
                有効
              <% else %>
                退会
              <% end %>
            </td>
          </tr>
        <% end %>
        <%= paginate @customer %>
      </tbody>
    </table>
  </div>
</div>
