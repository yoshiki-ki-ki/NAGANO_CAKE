<th>ジャンル検索</th>

<% @genres.each do |genre| %>
  <%= link_to public_items_path(name: genre.id) do %>
    <%= genre.name %>
  <% end %>
<% end %>

<h2>商品一覧</h2>
<% @items.each do |item| %>
  <%= link_to public_item_path(item.id) do %>
    <%= image_tag item.image, size: "100x100" %>
  <% end %>
  <%= item.name %>
  <%= item.price %>
<% end %>