<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <table class="table table-bordered">
        <thead>
          <th>ジャンル検索</th>
        </thead>
        <tbody class="table table-borderless">
          <% @genres.each do |genre| %>
          <tr>
            <td>
              <%= link_to public_items_path(name: genre.id) do %>
                <%= genre.name %>
              <% end %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="col-lg-9">
      <div class="row">
        <h2>商品一覧</h2>
      </div>
      <div class="row">
        <% @items.each do |item| %>
          <div class="col-lg-3">
            <table class="table table-borderless">
                <tr>
                  <td>
                    <%= link_to public_item_path(item.id) do %>
                      <%= image_tag item.image, size: "100x100" %>
                    <% end %>
                  </td>
                </tr>
                <tr>
                  <td><%= item.name %></td>
                </tr>
                <tr>
                  <td><%= item.price %></td>
                </tr>
            </table>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>