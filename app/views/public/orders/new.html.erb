<h1>Public::Orders#new</h1>
<%= form_with model: @order, url: public_orders_order_confirmation_path, method: :post do |f| %>
  <%= f.label :payment_method, "支払方法" %>
  
  <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>
  
  <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
  <%= f.label :payment_method, Order.payment_methods_i18n[:transfer]%>
  
  <%= f.label :postal_address, "お届け先" %>
  
  <%= f.radio_button :postal_address, '1' %>
  <%= f.label :postal_address, "ご自身の住所", value: 1 %>
  〒<%= current_customer.postal_code %> <%= current_customer.address %> <%= current_customer.last_name %><%= current_customer.first_name %>
  
  <%= f.radio_button :postal_address, '2' %>
  <%= f.label :postal_address, "登録済住所から選択", value: 2 %>
  <%= f.select :postal_address, options_from_collection_for_select(Address.all, :id, :address_display) %>
  
  <%= f.radio_button :postal_address, '3' %>
  <%= f.label :postal_address, "新しいお届け先", value: 3 %>
  <%= f.label :postal_code, '郵便番号（ハイフンなし）' %>
  <%= f.text_field :postal_code %>
  <%= f.label :address, '住所' %>
  <%= f.text_field :address %>
  <%= f.label :name, '宛名' %>
  <%= f.text_field :name %>

  <%= f.submit "確認画面へ進む" %>
<% end %>
