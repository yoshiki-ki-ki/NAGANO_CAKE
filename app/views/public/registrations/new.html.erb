<div class="container">
  <h2>新規会員登録</h2>
  <div class="row">
    <div class="col-lg-10 mx-auto">
      <table class="table table-borderless">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "public/shared/error_messages", resource: resource %>
          <tr class="field">
            <th><%= f.label :名前 %></th>
            <td>
              (姓)<%= f.text_field :last_name %>
              (名)<%= f.text_field :first_name %>
            </td>
          </tr>
          <tr class="field">
            <th><%= f.label :フリガナ %></th>
            <td>
              (セイ)<%= f.text_field :last_name_kana %>
              (メイ)<%= f.text_field :first_name_kana %>
            </td>
          </tr>

          <tr class="field">
            <th><%= f.label :email %></th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
          </tr>

          <tr class="field">
            <th><%= f.label :郵便番号（ハイフンなし） %></th>
            <td><%= f.text_field :postal_code %></td>
          </tr>

          <tr class="field">
            <th><%= f.label :住所 %></th>
            <td><%= f.text_field :address, size:50 %></td>
          </tr>

          <tr class="field">
            <th><%= f.label :電話番号（ハイフンなし）%></th>
            <td><%= f.text_field :telephone_number %></td>
          </tr>

          <tr class="field">
            <th><%= f.label :パスワード（6文字以上）%></th>
            <td><%= f.password_field :password, autocomplete: "new-password" %></td>
          </tr>

          <tr class="field">
            <th><%= f.label :パスワード（確認用）%></th>
            <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
          </tr>

          <tr class="actions">
            <th> </th>
            <td><%= f.submit "新規登録" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
  <div class="row">
    <div class="col-lg-7 mx-auto">
      <table>
        <tr>
          <th>すでに登録済みの方</th>
        </tr>
        <tr>
          <td><%= render "public/shared/links" %>からログインしてください</td>
        </tr>
      </table>
    </div>
  </div>
</div>