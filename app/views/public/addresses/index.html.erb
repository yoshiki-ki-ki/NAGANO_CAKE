<div class="container">
  <h1>配送先登録/一覧画面</h1>
  <div class="row">
    <table>
    <%= form_with model: @address, url:public_addresses_path, method: :post do |f| %>
      <tr>
        <th><%= f.label :郵便番号（ハイフンなし） %>　</th>
        <td><%= f.text_field :postal_code %></td>
      </tr>
      <tr>
        <th><%= f.label :住所 %>　</th>
        <td><%= f.text_field :address %></td>
      </tr>
      <tr>
        <th><%= f.label :宛名 %>　</th>
        <td><%= f.text_field :name %>　</td>
        <td><%= f.submit '新規登録', class:"btn btn-success" %></td>
      </tr>
    <% end %>
    </table>
  </div>
  <div class="row ">
    <div class="col-lg-10">
      <table class="table table-bordered">
        <thead>
          <tr class="table-secondary">
            <th>郵便番号</th>
            <th>住所</th>
            <th>宛名</th>
            <th> </th>
          </tr>
        </thead>
        <tbody>
          <% @addresses.each do |address| %>
            <tr>
              <td><%= address.postal_code %></td>
              <td><%= address.address %></td>
              <td><%= address.name %></td>
              <td>
                <%= link_to '編集する', edit_public_address_path(address.id) %>
                <%= link_to '削除する', public_address_path(address.id), method: :delete %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>