<h1>ショッピングカート</h1>

<th>商品名</th>
<th>単価（税込）</th>
<th>数量</th>
<th>小計</th>


<% @cart_items.each do |cart_item| %>
  <%= cart_item.item.name %>
  <%= cart_item.item.price %>
  <%= cart_item.item.with_tax_price %>
  <%= cart_item.subtotal %>
<% end %>
<th>合計金額</th>
¥<%= @total_price.round.to_s(:delimited)%>

