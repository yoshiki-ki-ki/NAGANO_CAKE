<div class="container">
  <h3>マイページ</h3>
  <div class="row">
    <table>
      <tr>
        <th>登録情報　　</th>
        <td><%= link_to '編集する', edit_public_customer_path(current_customer.id), class: "btn btn-success btn-lg" %></td>
      </tr>
    </table>
  </div>
  <div class="row">
    <table class="table table-bordered">
      <tr>
        <th class="table-active">氏名</th>
        <td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <th class="table-active">カナ</th>
        <td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th class="table-active">郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th class="table-active">住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="table-active">電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th class="table-active">メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
    </table>
  </div>
  <div class="row">
    <table>
      <tr>
        <th>配送先　　　</th>
        <td><%= link_to '一覧を見る', public_addresses_path(current_customer.id), class: "btn btn-primary btn-lg" %></td>
      </tr>
    </table>
  </div>
  <div class="row">
    <table>
      <tr>
        <th>注文履歴　　</th>
        <td><%= link_to '一覧を見る', public_orders_path(current_customer.id), class: "btn btn-primary btn-lg" %></td>
      </tr>
    </table>
  </div>
</div>